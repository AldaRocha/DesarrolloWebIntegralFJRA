@page
@model IntroduccionRazor_ASPNet.Pages.A03CondicionalesModel
@{
}

@{
	var calificacion = 8;
}

<h3>
	Instrucciones Condicionales
</h3>
<p>
	Tu calificación es: @calificacion
</p>
@if(calificacion >= 8)
{
	<p>
		Tu estado es aprobado
	</p>
}
else
{
	<p>
		Tu estado es reprobado
	</p>
}
<br/>
<h3>
	Instrucciones Condicionales Else-If
</h3>
@{
	var precio = 25;
}
<p>
	El precio actual del producto es @precio
</p>
@if(precio >= 30)
{
	<p>
		El precio es alto
	</p>
}
else if(precio > 20 && precio < 30)
{
	<p>
		El precio es normal
	</p>
}
else
{
	<p>
		El precio es bajo
	</p>
}
<br/>
<h3>
	Condicionales Múltiples Switch-Case
</h3>
@{
	var diaSemana = DateTime.Now.DayOfWeek;
	var dia = diaSemana.ToString();
	var mensaje = "";
}
@switch(dia)
{
	case "Monday":
		mensaje = "Este es el primer día de la semana.";
		break;
	case "Thursday":
		mensaje = "Solo falta un día para el viernes.";
		break;
	case "Friday":
		mensaje = "Hoy es Viernes y ...";
		break;
	default:
		mensaje = "Hoy es: " + dia;
		break;
}
<p>
	@mensaje
</p>