@page
@model IntroduccionRazor_ASPNet.Pages.A07SumaNumerosModel
@{
}

<h3>
	Suma Dos Números
</h3>
<form method="post">
	<p>
		Número 1:
		<input type="number" asp-for="num1"/>
	</p>
	<p>
		Número 2:
		<input type="number" asp-for="num2"/>
	</p>
	<p>
		<input type="submit" value="Calcular"/>
	</p>
</form>
@if (Model.suma != 0){
	<div>
		<h3>
			Suma = @Model.suma
		</h3>
	</div>
}