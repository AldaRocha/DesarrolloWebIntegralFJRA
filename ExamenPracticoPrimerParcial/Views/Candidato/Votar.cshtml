@model IEnumerable<ExamenPracticoPrimerParcial.Models.Candidato>

@{
	ViewData["Title"] = "Votar";
}

<h1>
	Votación
</h1>
<form asp-action="ElegirCandidato">
	@foreach (var item in Model){
		<div>
			<input type="radio" name="id" value="@item.CandidatoId" />
			<label>
				@Html.DisplayFor(modelItem => item.Nombre)
			</label>
		</div>
	}
	<div class="form-group">
		<input type="submit" value="Votar" class="btn btn-primary" />
	</div>
</form>

<div>
	<a asp-action="Index">Back to List</a>
</div>
